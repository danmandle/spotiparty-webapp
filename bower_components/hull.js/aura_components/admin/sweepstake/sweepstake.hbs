{{#isAdmin}}
  <div class="well">
    <h2>Create a Sweepstake</h2>

    <div class="control-group">
      <label for="hull-instant-name">Name: </label>
      <input class='input-block-level' id="hull-instant-name" name="hull-instant-name" type="text"/>
    </div>

    <div class="control-group">
      <label for="hull-instant-description">Description: optional</label>
      <input class='input-block-level' id="hull-instant-description" name="hull-instant-description" type="text"/>
    </div>

    <div class="control-group">
      <label for="hull-instant-secret">Secret: optional</label>
      <input class='input-block-level' id="hull-instant-secret" name="hull-instant-secret" type="text"/>
    </div>

    <div class="control-group">
      <button class="btn btn-primary" data-hull-action="create">Create</button>
    </div>
    
  </div>

  <hr/>

  <div class="well">
    <h2>Update Achievement</h2>

    <div class="control-group">
      <label for="hull-achievement-id">Select a Sweepstake to Edit: </label>
      <select id="hull-achievement-id" name="hull-achievement-id">
        {{#each achievements}}
          <option value="{{this.id}}">{{this.name}} - {{this.id}}</option>
        {{/each}}
      </select>
    </div>

    <div class="hull-instant-admin__section">
      <div class="control-group">
        <label for="hull-instant-update-name">Name: </label>
        <input class='input-block-level' id="hull-instant-update-name" name="hull-instant-update-name" type="text"/>
      </div>

      <div class="control-group">
        <label for="hull-instant-update-id">ID (use this in your component): </label>
        <code id="hull-instant-update-id" name="hull-instant-update-id" type="text"></code>
      </div>

      <div class="control-group">
        <label for="hull-instant-update-description">Description: </label>
        <input class='input-block-level' id="hull-instant-update-description" name="hull-instant-update-description" type="text"/>
      </div>

      <div class="control-group">
        <label for="hull-instant-update-secret">Secret: </label>
        <input id="hull-instant-update-secret" name="hull-instant-update-secret" type="text"/>
      </div>

      <div class="control-group">
        <button class="btn btn-primary" data-hull-action="updateAchievement">Update Achievement</button>
      </div>
    </div>
  </div>

  <div class="well">
    <div class="control-group">
      <label for="hull-prizes-json">Prizes JSON: </label>
      <textarea class='input-block-level' id="hull-prizes-json" name="hull-prizes-json" rows="20" cols="30"></textarea>
    </div>

    <div class="form-actions">
      <button class="btn btn-primary" data-hull-action="updatePrizes">Update Prize</button>
    </div>
  </div>
{{/isAdmin}}
