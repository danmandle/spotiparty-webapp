{{#upload_policy}}
  <form action="{{url}}" method="post" enctype="multipart/form-data" class="hull-upload">

    {{#key_value params}}
      <input type="hidden" name="{{key}}" value="{{value}}"/>
    {{/key_value}}

    <div class="hull-upload__dropzone dropzone well hidden-phone hidden-phone-tablet">
      <b>Drop an image here</b>
    </div>

    <input type="hidden" name="Filename" value=""/>
    <input type="hidden" name="Content-Type" value=""/>
    <input type="hidden" name="name" value=""/>

    <div class="hull-upload__filebutton fileupload-buttonbar">
        {{> uploads/image/file}}
    </div>

    <div class="fileupload-progress fade">
      <div data-hull-progress class="progress-success progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
        <div data-hull-progress-bar class="bar" style="width:0%;"></div>
      </div>
      <div class="progress-extended">&nbsp;</div>
    </div>


    <div class='error'></div>
    <div class='filescontainer'></div>
  </form>
{{/upload_policy}}
{{^upload_policy}}
  No storage backend configured. As an admin, please configure one.
{{/upload_policy}}
